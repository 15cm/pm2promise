{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "lib": [
      "es2017"
    ]
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "types": [
    "node", "jest", "ts-jest"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
